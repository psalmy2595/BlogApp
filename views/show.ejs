<%- include ('./partials/header') -%>
<div class="ui main text container segment">
    <div class="ui huge header"><%- blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image"src="<%= blog.image %>" >
                 <div class="content">
                 <!-- can install and use moment js library to format the date, how we use the built in js -->
                    <span><%= blog.created.toDateString() %></span>
                 </div>
            <div class="description">     
                <!-- this allows you to to use the html tags for description when posting in front page -->
                 <p><%- blog.body %></p>
            </div>
            <a href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
                <button class="ui red inverted button">Delete</button>
            </form>
            
        </div>
    </div>  
</div>
    




<%- include ('./partials/footer') -%>